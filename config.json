{
	"src": "src",
	"dest": "www",
	"temp": "_temp",

	"pages": {
		"srcPages": "**/*.html"
	},

	"files": {
		"src": "**/files/**/*.*",
		"dest": "_assets/files"
	},

	"fonts": {
		"src": "**/*.{eot,otf,ttf,woff,woff2}",
		"dest": "_assets/fonts"
	},

	"scripts": {
		"src": "**/*.js",
		"dest": "_assets/scripts",
		"scriptfile": "script.js",

		"vendorscripts": "**/vendorscripts/*.css"
	},

	"styles": {
		"srcCss": "**/*.css",
		"destCss": "styles",
		"cssSheet": "styleCss.css",

		"srcScss": "**/*.scss",
		"destScss": "styles",
		"scssSheet": "styleScss.css",

		"srcFinalCss": "**/*.css",
		"destFinalCss": "_assets/styles",
		"finalCssSheet": "styles.css"
	}
}