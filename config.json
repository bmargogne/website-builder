{
	"env": {
		"isProd": 					false,
		"isTest": 				false,
		"es6":					true
	},

	"src": "src",
	"dest": "www",
	"temp": "_temp",

	"ConfigHint_Building Steps" : "Building steps complements building sequence from _starter file, but have a higher priority",

	"buildingSteps": {
		"cleanDest": 				false,
		"cleanTemp": 				false,
		"cleanUndefined": 		true,

		"processBitmaps": 		false,
		"processFiles": 		false,
		"processFonts": 		false,
		"processPages": 		false,
		"processScripts": 		false,
			"wrapScript":		false,
			"minifyScript":		false,
		"processSprite": 		false,
		"processSpritesheet": 	false,
		"processStyle": 		false,
		"processVendors": 		false,
		"processVectors": 		false,
		"serveLocal": 			false,
		"serveBrowsers": 		false
	},

	"serve" : {
		"localport":3000,
		"localurl": "http://localhost:3000",
		"browserSyncUI": 		true,

		"browsers" : {
			"chrome":				false,
			"chromewin":		true,
			"iexplore":				false,
			"edge":					false,
			"firefox":				false,
			"safari":				false,
			"opera":				false
		}
	},

	"ConfigHint_Globs" : "all globs defining where you store you different files are set below",

	"exclude": "**/exclude/**/*.*",

	"files": {
		"src": "**/files/**/*.*",
		"dest": "_assets/files"
	},

	"fonts": {
		"src": "**/*.{eot,otf,ttf,woff,woff2}",
		"dest": "_assets/fonts"
	},

	"images": {
		"srcBitmaps": "**/*.{jpg,png,gif}",
		"destBitmaps": "_assets/images",

		"srcSprite": "**/sprite/**/*.{jpg,png,gif}",
		"destSprite": "_assets/images",
		"cssSpriteFile": "spriteBmp.css",
		"tmpSubFolder": "sprite",
		"bitmapSpritesheet": "spritesheet.png",

		"srcVectors": "**/*.svg",
		"destVectors": "_assets/images",
		"vectorSpritesheet" : "s.svg"
	},

	"pages": {
		"src": "**/*.html",
		"partials" :"**/_*.html"
	},

	"scripts": {
		"src": "**/*.js",
		"dest": "_assets",
		"scriptfile": "script.js",

		"wrapper" : {
			"before":"$(document).ready(() => {",
			"after":"});"
		}
	},

	"style": {
		"srcCss": "**/*.css",
		"destCss": "style",
		"cssSheet": "styleCss.css",

		"scssDefaultRoot": "_commons/styles",
		"srcScss": "**/*.scss",
		"destScss": "style",
		"scssSheet": "styleScss.css",

		"srcFinalCss": "**/*.css",
		"destFinalCss": "_assets",
		"finalCssSheet": "style.css"
	},

	"vendors": {
		"src": "_vendors/**/*.*",
		"dest": "_assets/vendors"
	}
}