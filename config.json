{
    "src": "src",
    "dist": "dist", // update .gitignore if changed

    "srcPages": "**/*.{html}",

    "files": {
        "src": "**/files/**/*.*",
        "dest": "_assets/files"
    },

    "scripts": {
        "src": "**/*.js",
        "dest": "_assets/scripts",
        "vendorscripts": "**/vendorscripts/*.css",
        "scriptfile": "script.js"
    },

    "styles": {
        "src": "**/*.css",
        "dest": "_assets/styles",
        "stylesheet": "style.css"
    }
}