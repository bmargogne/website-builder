{
	"env": {
		"isProd": 					false,
		"isTest": 				true,
		"es6":					true
	},

	"src": "src",
	"dest": "www",
	"temp": "_temp",

	"ConfigHint_Building Steps" : "Building steps complements building sequence from _starter file, but have a higher priority",

	"buildingSteps": {
		"cleanDest": 			true,
		"cleanTemp": 			true,
		"cleanUndefined": 		true,

		"processBitmaps": 		true,
		"processFiles": 		true,
		"processFonts": 		true,
		"processPages": 		true,
		"processScripts": 		true,
			"wrapScript":		true,
			"minifyScript":			false,
		"processSprite": 		true,
		"processSpritesheet": 	true,
		"processStyle": 		true,
		"processVendors": 		true,
		"processVectors": 		true,

		"serveLocal": 			true,
		"browserSyncUI": 		true,
		"serveBrowsers": 		true
	},

	"browsers" : {
		"chrome":				true,
		"firefox":				true
	},

	"ConfigHint_Globs" : "all globs defining where you store you different files are set below",

	"exclude": "**/exclude/**.*",

	"files": {
		"src": "**/files/**/*.*",
		"dest": "_assets/files"
	},

	"fonts": {
		"src": "**/*.{eot,otf,ttf,woff,woff2}",
		"dest": "_assets/fonts"
	},

	"images": {
		"srcBitmaps": "**/*.{jpg,png,gif}",
		"destBitmaps": "_assets/images",

		"srcSprite": "**/sprite/**/*.{jpg,png,gif}",
		"destSprite": "_assets/images",
		"cssSpriteFile": "spriteBmp.css",
		"tmpSubFolder": "sprite",
		"bitmapSpritesheet": "spritesheet.png",

		"srcVectors": "**/*.svg",
		"destVectors": "_assets/images",
		"vectorSpritesheet" : "spriteSvg.svg",

    	"css": "_commons/styles/",
		"path": "_assets/images/",
    	"dest": "_assets/images/"
	},

	"pages": {
		"src": "**/*.html",
		"partials" :"**/_*.html"
	},

	"scripts": {
		"src": "**/*.js",
		"dest": "_assets",
		"scriptfile": "script.js",

		"wrapper" : {
			"before":"$(document).ready(() => {",
			"after":"});"
		}
	},

	"style": {
		"srcCss": "**/*.css",
		"destCss": "style",
		"cssSheet": "styleCss.css",

		"scssDefaultRoot": "_commons/styles",
		"srcScss": "**/*.scss",
		"destScss": "style",
		"scssSheet": "styleScss.css",

		"srcFinalCss": "**/*.css",
		"destFinalCss": "_assets",
		"finalCssSheet": "style.css"
	},

	"vendors": {
		"src": "_vendors/**/*.*",
		"dest": "_assets/vendors"
	}
}