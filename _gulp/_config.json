{
	"src": "src",
	"dest": "www",
	"temp": "_temp",

	"files": {
		"src": "**/files/**/*.*",
		"dest": "_assets/files"
	},

	"fonts": {
		"src": "**/*.{eot,otf,ttf,woff,woff2}",
		"dest": "_assets/fonts"
	},

	"images": {
		"srcBitmaps": "**/*.{jpg,png,gif}",
		"destBitmaps": "_assets/images",

		"srcVectors": "**/*.svg",
		"destVectors": "_assets/spritesheet",
		"spriteSheetFile" : "_assets/vectorSprite.svg"
	},

	"pages": {
		"src": "**/*.html",
		"partials" :"**/_*.html"
	},

	"scripts": {
		"src": "**/*.js",
		"dest": "_assets/scripts",
		"scriptfile": "script.js"
	},

	"style": {
		"srcCss": "**/*.css",
		"destCss": "style",
		"cssSheet": "styleCss.css",

		"srcScss": "**/*.scss",
		"destScss": "style",
		"scssSheet": "styleScss.css",

		"srcFinalCss": "**/*.css",
		"destFinalCss": "_assets/style",
		"finalCssSheet": "style.css"
	},

	"vendors": {
		"src": "vendors/**/*.*",
		"dest": "_assets/vendors"
	}

}