{
	"env": {
		"isDev": true,
		"isProd": false,
		"isTest": false
	},

	"src": "src",
	"dest": "www",
	"temp": "_temp",

	"buildingSteps": {
		"cleanDest": true,
		"cleanTemp": false,

		"processBitmaps": true,
		"processFiles": true,
		"processFonts": true,
		"processPages": true,
		"processScripts": true,
		"processSprite": true,
		"processStyle": true,
		"processVendors": true,
		"processVectors": true,

		"serveLocal": true,
		"browserSyncUI": true,
		"serveBrowsers": true
	},

	"browsers" : {
		"chrome":true,
		"firefox":true
	},

	"files": {
		"src": "**/files/**/*.*",
		"dest": "_assets/files"
	},

	"fonts": {
		"src": "**/*.{eot,otf,ttf,woff,woff2}",
		"dest": "_assets/fonts"
	},

	"images": {
		"srcBitmaps": "**/*.{jpg,png,gif}",
		"destBitmaps": "_assets/images",

		"srcVectors": "**/*.svg",
		"destVectors": "_assets/images",
		"spritesheetVector" : "spriteSvg.svg"
	},

	"pages": {
		"src": "**/*.html",
		"partials" :"**/_*.html"
	},

	"scripts": {
		"src": "**/*.js",
		"dest": "_assets/scripts",
		"scriptfile": "script.js"
	},

	"style": {
		"srcCss": "**/*.css",
		"destCss": "style",
		"cssSheet": "styleCss.css",

		"srcScss": "**/*.scss",
		"destScss": "style",
		"scssSheet": "styleScss.css",

		"srcFinalCss": "**/*.css",
		"destFinalCss": "_assets/style",
		"finalCssSheet": "style.css"
	},

	"vendors": {
		"src": "_vendors/**/*.*",
		"dest": "_assets/vendors"
	}
}